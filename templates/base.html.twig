<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">

			<div class="container-fluid">

				<a class="navbar-brand" href="{{ path('home') }}">
					<div id="logo">
						<img src="/images/illiade.svg" alt="Illiade &amp; films" height="80">
					</div>
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor03">
					<ul class="navbar-nav mx-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('blog_long') }}">Long-métrages</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('blog_court') }}">Court-métrages</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('blog_developpement') }}">En développement</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('blog_info') }}">Informations</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('blog_contact') }}">Contact</a>
						</li>
					</ul>
					<ul class="navbar-nav ms-auto">
						{% if app.user %}
							<li class="nav-item">
								<a class"nav-link" href="{{ path('app_logout') }}">Me déconnecter</a>
							</li>
							<li class="nav-item">
								<a class"nav-link" href="#">Mon compte</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class"nav-link" href="{{ path('app_login') }}">Me connecter</a>
							</li>
							<li class="nav-item">
								<a class"nav-link" href="{{ path('app_register') }}">M'inscrire</a>
							</li>
						{% endif %}
					</ul>
				</div>


			</div>
		</nav>
		<div class="container"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
